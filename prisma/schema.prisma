generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  email     String   @unique
  phone     String?  @unique
  image     String?
  password  String
  provider  String?
  providerAccountId String?  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  scripts         GeneratedScript[] // ðŸ‘ˆ optional reverse relation
  GeneratedSpeech GeneratedSpeech[]
  videos          Video[] // ðŸ‘ˆ Added reverse relation for Video
}

model GeneratedScript {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  prompt    String
  content   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  userId    String?

  user User? @relation(fields: [userId], references: [id])
}

model GeneratedSpeech {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  text      String
  audioFile String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  userId    String?

  user User? @relation(fields: [userId], references: [id])
}


model Video {
    id        String   @id @default(auto()) @map("_id") @db.ObjectId
    title     String?
    thumbnail String?
    videoFile String?
    size      Float?
    duration  Float?
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
    userId    String?
    isArchived Boolean @default(false)
    isDeleted  Boolean @default(false)

    user User? @relation(fields: [userId], references: [id])
}
