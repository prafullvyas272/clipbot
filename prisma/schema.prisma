generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  email     String   @unique
  phone     String?  @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  scripts         GeneratedScript[] // ðŸ‘ˆ optional reverse relation
  GeneratedSpeech GeneratedSpeech[]
}

model GeneratedScript {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  prompt    String
  content   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  userId    String?

  user User? @relation(fields: [userId], references: [id])
}

model GeneratedSpeech {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  text      String
  audioFile String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  userId    String?

  user User? @relation(fields: [userId], references: [id])
}
